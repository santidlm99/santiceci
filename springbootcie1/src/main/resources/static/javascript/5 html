<html>
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://code.jquery.com/jquery-3.7.1.js"
      integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4="
      crossorigin="anonymous"
    ></script>

    <script type="text/javascript">
  
      let lista=[];
      let o1= {comida:"galletas",precio:2};
      let o2= {comida:"galletas",precio:2};
      lista.push(o1,o2);
      console.log(lista.length);
      $(function () {
        //carga inicial de elementos
        for (var i=0;i<lista.length;i++) {
          let objeto=lista[i];
          $("#lista ul")
          .append(`<li class='list-group-item'>${objeto.comida}<span>${objeto.precio}</span>Euros</li>`);
        }

        $("#formulario").hide();

        $("li").click(function () {
          if (!$(this).hasClass("bg-info")) {
            $(this).addClass("bg-info");
          } else {
            $(this).removeClass("bg-info");
          }
        });

        $("#botonmostrar").click(function() {

            $("#lista").fadeOut("slow",function(){
                $("#formulario").fadeIn("slow");

            } );
           
        })

        $("#boton").click(function() {

        
            let comida= $("#comida").val();
            let precio= $("#precio").val();
            var textoli=`<li class='list-group-item'>${comida}<span>${precio}</span>Euros</li>`;
            $("ul").append(textoli);
            $("#lista").show();
            $("#formulario").hide();
        })




      });
    </script>
  </head>
  <body>
    <div class="container">
      <div class="row" id="lista">
        <ul class="list-group">
          
        
        </ul>
        <div class="form-group mt-3">
            <input type="button" class="btn btn-primary" id="botonmostrar" value="añadir a la lista">
          </div>
      </div>
      <div class="row mt-3" id="formulario">
        <form>
          <div class="form-group">
            <label for="comida">Comida</label>
            <input type="text" id="comida" class="form-control" />
          </div>

          <div class="form-group">
            <label for="precio">Precio</label>
            <input type="text" id="precio" class="form-control" />
          </div>
          <div class="form-group mt-3">
            <input type="button" class="btn btn-primary" id="boton" value="añadir a la lista">
          </div>
        </form>
      </div>
    </div>
  </body>
</html>